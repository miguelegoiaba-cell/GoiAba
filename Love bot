import discord
from discord.ext import commands
import random
import os

intents = discord.Intents.default()
intents.message_content = True
intents.members = True

bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"Bot SHIP online como {bot.user}")

# -------------------------
# Comando: !ship @pessoa1 @pessoa2
# -------------------------
@bot.command()
async def ship(ctx, pessoa1: discord.Member, pessoa2: discord.Member):
    porcentagem = random.randint(0, 100)
    
    if porcentagem < 30:
        msg = "ðŸ’” NÃ£o combinam muito..."
    elif porcentagem < 70:
        msg = "ðŸ’› AtÃ© que combinam!"
    else:
        msg = "â¤ï¸ Perfeitos juntos!!!"

    embed = discord.Embed(
        title="ðŸ’˜ SHIP LOVE CALCULATOR ðŸ’˜",
        description=f"{pessoa1.mention} â¤ï¸ {pessoa2.mention}",
        color=discord.Color.pink()
    )
    embed.add_field(name="Compatibilidade", value=f"**{porcentagem}%**")
    embed.add_field(name="Resultado", value=msg)

    await ctx.send(embed=embed)

# -------------------------
# Iniciar o bot
# -------------------------
TOKEN = os.getenv("TOKEN")
bot.run(TOKEN)
